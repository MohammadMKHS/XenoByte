<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>XenoByte Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/mainStyle.css" asp-append-version="true" />
</head>
<body>
    <!-- Theme Toggle Switch -->
    <div class="theme-switch-wrapper">
        <label class="theme-switch" for="checkbox">
            <input type="checkbox" id="checkbox" />
            <div class="slider"></div>
        </label>
        <span class="text-sm font-bold text-gray-400" id="themeText">Dark Mode</span>
    </div>

    <!-- Header Section -->
    <header class="header">
        <div class="logo-container">
            <!-- Placeholder for your Logo.png. Replace src with your actual image path. -->
            <img src="~/images/logo.png" alt="XenoByte Logo" class="logo-img">
            <div class="logo-text">XenoByte</div>
        </div>
        <nav>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="" asp-action="">About Us</a>
            <a asp-controller="Home" asp-action="Contact">Contact</a>
            <a asp-controller="" asp-action="">Report</a>
            @if (!User.Identity.IsAuthenticated)
            {
                <a asp-controller="Authentication" asp-action="Login">Login</a>
                <a asp-controller="Authentication" asp-action="SignUp">Sign Up</a>
            }
            else
            {
                <span class="ms-3">Hello, @User.Identity.Name!</span>
                <a asp-controller="Authentication" asp-action="Logout">Logout</a>
            }
        </nav>
    </header>

    <!-- Main Content Wrapper -->
    <div class="content-wrapper">
        @RenderBody()        
    </div>

    <!-- Footer Section -->
    <footer class="xeno-footer">
        <p>&copy; 2025 XenoByte. All rights reserved. | Designed for <a href="#">Graduation Project</a></p>
    </footer>

    <!-- Modal Structure -->
    <div id="detailModal" class="modal-overlay">
        <div class="modal-content">
            <button class="close-button" id="closeModalBtn">&times;</button>
            <h3 id="modalTitle"></h3>
            <div id="modalBody" class="modal-body">
                <!-- Detailed content will be injected here -->
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/mainJs.js" asp-append-version="true"></script>
    <script src="~/js/helpers.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
