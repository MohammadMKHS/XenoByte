<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>XenoByte Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/mainStyle.css" asp-append-version="true" />
</head>
<body>
    <!-- Header Section -->
    <header class="header navbar navbar-expand-lg navbar-dark bg-dark fixed-top" style="z-index: 1050;">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <div class="logo-container d-flex align-items-center">
                <img src="~/images/logo.png" alt="XenoByte Logo" class="logo-img me-2">
                <div class="logo-text">XenoByte</div>
            </div>
            <nav class="navbar-nav flex-row align-items-center">
                <a class="nav-link px-2" asp-controller="Home" asp-action="Index">Home</a>
                <a class="nav-link px-2" asp-controller="" asp-action="">About Us</a>
                <a class="nav-link px-2" asp-controller="Home" asp-action="Contact">Contact</a>
                <a class="nav-link px-2" asp-controller="" asp-action="">Report</a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="nav-link px-2" asp-controller="Authentication" asp-action="Login">Login</a>
                    <a class="nav-link px-2" asp-controller="Authentication" asp-action="SignUp">Sign Up</a>
                }
                else
                {
                    <span class="ms-3">Hello, @User.Identity.Name!</span>
                    <a class="nav-link px-2" asp-controller="Authentication" asp-action="Logout">Logout</a>
                }
                <button id="themeToggleBtn" class="btn btn-link nav-link px-2 d-flex align-items-center" style="font-size:1.5rem;" title="Toggle theme">
                    <span id="themeIcon" class="material-icons">dark_mode</span>
                </button>
            </nav>
        </div>
    </header>

    <!-- Main Content Wrapper -->
    <div class="content-wrapper pt-5 mt-4">
        @RenderBody()        
    </div>

    <!-- Footer Section -->
    <footer class="xeno-footer">
        <p>&copy; 2025 XenoByte. All rights reserved. | Designed for <a href="#">Graduation Project</a></p>
    </footer>

    <!-- Modal Structure -->
    <div id="detailModal" class="modal-overlay">
        <div class="modal-content">
            <button class="close-button" id="closeModalBtn">&times;</button>
            <h3 id="modalTitle"></h3>
            <div id="modalBody" class="modal-body">
                <!-- Detailed content will be injected here -->
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/mainJs.js" asp-append-version="true"></script>
    <script src="~/js/helpers.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
